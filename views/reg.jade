extends layout

block content
  h4 Nýr notandi? Skráðu þig hér!
  
  if infomsg
    p= infomsg
  else
    form(method="post")
      fieldset.form-group
        label(for="name") Nafn:
        input(id="name" type="text" placeholder="Nafn" name="name" required).form-control
      fieldset.form-group  
        label(for="username") Notendanafn:
        input(id="username" type="text" placeholder="Notendanafn" name="username" required).form-control
      fieldset.form-group
        label(for="password") Lykilorð:
        input(id="password" type="password" name="password" placeholder="Lykilorð" required).form-control
      input(type="submit" value="Skrá nýjan notenda").form-control